<% if @items.present? %>
	<h4> Item category: <%= @item_category.name %> </h2>
	<%= form_tag '/calculate_total' do %>
		<table>
			<tr>
				<th> Name </th>
				<th> Rate </th>
				<th colspan="5"> Actions </th>
			</tr>
			<% @items.each do |item| %>
				<tr>
					<td> <%= item.name %> </td>
					<td> <%= item.rate %> </td>
					<td> <%= link_to 'Show', item_category_item_path(@item_category, item) %> </td>
					<td> <%= link_to 'Edit', edit_item_category_item_path(@item_category, item) %> </td>
					<td> <%= link_to 'Delete', [@item_category, item], method: :delete, data: { confirm: 'Are you sure you want to delete?' } %> </td>
					<td> <%= link_to 'Show Taxes', item_item_taxes_path(item) %> </td>
					<td> <%= check_box_tag 'item_ids[]', item.id, false, class: 'item' %> </td>
				</tr>
			<% end %>
		</table>
		<%= button_tag 'Submit' %> 
	<% end %>
<% end %>
<%= link_to 'Add new item', new_item_category_item_path(@item_category) %>
<%= link_to 'Go to Item Categories', item_categories_path %>
