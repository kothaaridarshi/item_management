<% if @items_data.present? %>
	<table>
		<tr>
			<th> Name </th>
			<th> Rate(Rs.) </th>
			<th> Tax(Rs.) </th>
			<th> Total(Rs.) </th>
		</tr>
		<% @items_data.each do |item_data| %>
			<tr>
				<td><%= item_data[:name] %></td>
				<td><%= item_data[:rate] %></td>
				<td><%= item_data[:tax] %></td>
				<td><%= item_data[:total] %></td>
			</tr>
		<% end %>
		<tr>
			<th>Total</th>
			<td><%= @total[:rate] %></td>
			<td><%= @total[:tax] %></td>
			<td><%= @total[:total] %></td>
		</tr>
	</table>
<% else %>
	<h4> No items selected </h4>
<% end %>
<br><%= link_to 'Back', :back %>